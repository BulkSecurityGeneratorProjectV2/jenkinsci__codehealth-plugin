<j:jelly xmlns:j="jelly:core" xmlns:l="/lib/layout" xmlns:st="jelly:stapler">
    <l:layout title="${%Codehealth Dashboard}" norefresh="true">
        <l:header>
            <link rel="stylesheet" type="text/css" href="${resURL}/plugin/codehealth/codehealth.css"/>
        </l:header>
        <l:main-panel>
            <script src="${resURL}/plugin/codehealth/bundles/codehealth.js"/>
            <div id="codehealth_main" class="bootstrap-3">
                <!-- content in here can use Bootstrap 3 CSS rules. -->
                <st:include page="./changeset_configuration.jelly"/>
                <!--
                <button id="refresh-button" type="button" class="btn btn-primary">Refresh</button>
                -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-6 col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Issue Trend</h3>
                                </div>
                                <div class="panel-content">
                                    <div class="row">
                                        <div class="col-md-6 center-text">
                                            <h4 id="total-issue-count"></h4>
                                            <span class="text-muted">Number of Issues</span>
                                        </div>
                                        <div class="col-md-6 center-text">
                                            <h4 id="total-issue-trend"></h4>
                                            <span class="text-muted">Issue Trend</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div id="issues-graph" class="chart-container"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Issues by Origin</h3>
                                </div>
                                <div class="panel-body">
                                    <div id="issues-pie" class="chart-container">
                                    </div>
                                </div>
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>Plugin</th>
                                            <th># HIGH</th>
                                            <th># NORMAL</th>
                                            <th># LOW</th>
                                            <th># TOTAL</th>
                                        </tr>
                                    </thead>
                                    <tbody id="issues-per-origin">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6 col-lg-4">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Code Trend</h3>
                                </div>
                                <div class="panel-content">
                                    <div class="row">
                                        <div class="col-md-3 center-text">
                                            <h4 id="total-line-count"></h4>
                                            <span class="text-muted">Lines of Code</span>
                                        </div>
                                        <div class="col-md-3 center-text">
                                            <h4 id="total-file-count"></h4>
                                            <span class="text-muted">Files</span>
                                        </div>
                                        <div class="col-md-3 center-text">
                                            <h4 id="total-line-trend"></h4>
                                            <span class="text-muted">LOC Trend</span>
                                        </div>
                                        <div class="col-md-3 center-text">
                                            <h4 id="total-duplications"></h4>
                                            <span class="text-muted">Duplications</span>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div id="loc" class="chart-container"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-sd-12">
                            <div class="panel panel-default">
                                <div class="panel-heading clearfix">
                                    <h4 class="panel-title pull-left collapsible" data-toggle="collapse"
                                        data-target="#changeset-container">Latest changes
                                    </h4>
                                    <div class="pull-right">
                                        <button type="button" class="btn btn-sm pull-right" data-toggle="modal"
                                                data-target="#modal-config">
                                            Configure
                                        </button>
                                    </div>
                                </div>
                                <ul id="changeset-container" class="list-group collapse in">
                                </ul>
                            </div>
                        </div>
                        <div class="col-md-4 col-sd-12">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h3 class="panel-title">Build information</h3>
                                </div>
                                <div class="panel-content">
                                    TODO
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="panel panel-default">
                                <div class="panel-heading collapsible" data-toggle="collapse"
                                     data-target="#issue-table-panel">
                                    <span class="panel-title">All issues</span>
                                </div>
                                <div class="panel-content collapse" id="issue-table-panel">
                                    <div id="issue-table">
                                        <table class="table">
                                            <thead>
                                                <tr>
                                                    <th># ID</th>
                                                    <th>Message</th>
                                                    <th>Priority</th>
                                                    <th>Origin</th>
                                                </tr>
                                            </thead>
                                            <tbody id="codehealth-issues">
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </l:main-panel>
    </l:layout>
</j:jelly>
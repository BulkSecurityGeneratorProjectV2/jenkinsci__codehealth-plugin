<div class="container-fluid">
    <div class="row">
        <div class="col-sm-2">
            <img src="{{iconUrl}}" alt="Build status icon"/>
        </div>
        <div class="col-sm-10">
            {{displayName}}
            <br/>
            Last Build: <a href="{{lastBuild.url}}">#{{lastBuild.number}}</a> at {{lastBuild.time}}
            <br/>
            Result: {{lastBuild.result}}
            <br/>
            {{#each causes}}
                {{this}}
                <br/>
            {{/each}}
        </div>
    </div>
    {{#if healthreports}}
        Health Reports
        <ul class="list-group">
            {{#each healthreports}}
                {{> healthreport this}}
            {{/each}}
        </ul>
    {{/if}}
</div>
